<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PassVault" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <!-- Overflow menu: dark background, white text (for toolbars with primary background) -->
    <style name="ThemeOverlay.PassVault.Popup" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorBackground">@color/primary_dark</item>
    </style>
</resources>
